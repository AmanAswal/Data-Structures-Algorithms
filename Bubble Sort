#include<iostream>

using namespace std;

void swap(int *a, int *b)
{
	int temp;
	temp = *a;
	*a=*b;
	*b=temp;
}


void bubbleSort(int A[], int n)
{
	for ( int k=0; k<n-1; k++)
	{
		int flag = 0;
		for(int i=0;i<n-k-1;i++)
		{
			if( A[i] > A[i+1])
			{
				swap(&A[i], &A[i+1]);
				flag = 1;
			}
		}
		if (flag == 0)
		break;
	}
}

int main()
{	int n; 
	cout<<"Enter the size of array: ";
	cin>>n;
	int A[n];
	cout<<"Enter the elements: \n";
	for(int i=0;i<n; i++)
	{
		cin>>A[i];
	}

	bubbleSort(A, n);
	cout<<"The Sorted list using Bubble sorting is: ";
	for( int i=0; i<n; i++)
	{
		cout<<A[i]<<" ";
	}
	return 0;
}
